        </div>
        <div class="col">
            <!--form test begin-->
            <section class="bg-form2">
                <div class="formulaire">
                    <div class="form text-white">
                        <div class="row  m-0 d-flex flex-column">
                            <div class="col-md-10 offset-md-3 m-0">
                                <div class="form">
                                    <h1 class="text-left">Prendre rendez-vous</h1><br>
                                    <form action="/calendar" method="POST">
                                        <div class="form-group">
                                            <label for="inputName">date</label>
                                            <input id="datevalue" type="text" name="date"
                                                class="form-control customInput" onkeydown="return false"
                                                placeholder="date" value="<%=date%>" required>

                                            <label for="inputName">heure </label>
                                            <input id="heurevalue" type="text" name="heure"
                                                class="form-control customInput" onkeydown="return false"
                                                placeholder="heure" value="" required>
                                        </div>
                                        <div class="form-group ">
                                            <label for="inputName">Nom</label>
                                            <input type="text" name="name" class="form-control" required>
                                        </div>
                                        <div class="form-group ">
                                            <label for="inputEmail">Email</label>
                                            <input type="text" name="email" class="form-control" required>
                                        </div>
                                        <div class="form-group ">
                                            <label for="inputTel ">Téléphone</label>
                                            <input type="tel" name="tel" class="form-control" required>
                                        </div>

                                        <div class="d-grid gap-2 col-6 mx-auto p-3">
                                            <button class="btn btn-outline-danger submitBtn"
                                                type="submit">submit</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section><br>
            <!--form test ends-->
        </div>
