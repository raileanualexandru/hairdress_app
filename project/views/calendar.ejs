                <div>mar</div>
                <div>mer</div>
                <div>jeu</div>
                <div>ven</div>
                <div>sam</div>
                <div>dim</div>
            </div>
            <div class="days">
                <div class="weekend"></div>

            </div>
        </div>
        <div class="col buttons">
            <div class="col-6">



