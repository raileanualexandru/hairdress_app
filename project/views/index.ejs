<body>
    <!-- header start -->
    <header>
        <div class="nav-area-container">
            <ul class="nav-area">
                <li><a href="#"><i class="fa fa-fw fa-home"></i>home</a></li>
                <li><a href="#about">about</a></li>
                <li><a href="#services">service</a></li>
                <li><a href="#barbers"><i class='fa fa-cut'></i> barber</a></li>
                <li><a href="#contact"><i class="fa fa-fw fa-envelope"></i> contact</a></li>
                <% if (typeof user!='undefined' ){%>
                    <li><a href="/adminarea">ADMIN-AREA</a></li>
                    <li><a href="/users/admin">admin</a></li>
                    <li><a href="/users/logout">logout</a></li>
                    <h1>Welcome <%= user.name %>
                    </h1>
                    <% }else{ %>
                        <li><a href="/users/register">Register</a></li>
                        <li><a href="/users/login"><i class="fa fa-fw fa-user"></i> Login</a></li>
                        <% } %>
            </ul>
        </div>
        <div class="welcome-text">
            <h3>being a barber is about taking care of people </h3>
            <% if (typeof user!='undefined' ){%>
                <button class="btn" type="submit" name="appointment"><a id="today" href="" class="calendarlink">Appointment</a></button>
                        <h3>You can take at appointment </h3>
                <% }else{ %>
                    <button class="btn" type="submit" name="appointment"><a href="/users/login"
                            class="calendarlink">Appointment</a></button>
                            <h3>To take a appointement you need to login</h3>
                    <% } %>
        </div>
    </header>
    <!-- header end -->

    <!-- ====================================================== -->


