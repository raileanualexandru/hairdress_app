                        <div class="info-container">
                            <div class="adresse">
                                <h1>Adresse</h1>
                                <p>Rue Neuve 1090</p>
                            </div>
                            <div class="phone">
                                <h1>Phone Number</h1>
                                <p>0032 32 32 32</p>
                            </div>
                            <div class="email">
